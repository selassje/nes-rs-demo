{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build NES ROM (Windows)",
      "type": "shell",
      "command": "${workspaceFolder}\\build.bat",
      "problemMatcher": [
        {
          "owner": "cc65",
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.*):(\\d+):\\s+(Error|Warning):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          }
        }
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/c"
          ]
        }
      }
    },
    {
      "label": "Run in Mesen",
      "type": "shell",
      "command": "mesen.exe ${workspaceFolder}\\nes-rs-demo.nes",
      "dependsOn": "Build NES ROM (Windows)",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}